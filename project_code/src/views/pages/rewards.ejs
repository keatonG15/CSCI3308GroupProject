<%- include('../partials/header') %>
<%- include ('../partials/navbar') %> 
<main>
  <style>
    body, main {
      font-family: 'Arial', sans-serif;
      /* background-color: lightblue; */
      text-align: center;
      max-width: 1200px;
      margin: 0 auto;
    }
  
    .card {
      margin-bottom: 10px;
      width: 300px;
      height: 250px;
      background-color: rgba(255, 255, 255, 0.5);
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
  
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }
  
    .btn {
      border-radius: 5px;
      background-image: linear-gradient(to right, #4caf50, #81c784);
      color: white;
      padding: 10px 20px;
      border: none;
      transition: background-color 0.3s ease;
    }
  
    .btn:hover {
      background-image: linear-gradient(to right, #388e3c, #66bb6a);
    }
  
    .profile-details strong {
      color: #333;
    }

    .profile-header {
    background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
    padding: 20px;
    border-radius: 10px;
    margin: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .profile-header h1 {
    font-size: 2em; /* Adjust size as needed */
    color: #333; /* Dark color for better contrast */
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5); /* Black shadow for depth */
  }

  .profile-header p {
    font-size: 1.2em;
    color: #555; /* Slightly lighter than the heading */
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
  }
  .navbar {
    background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
    /* Other styling properties */
  }

  /* Active/open state of the menu */
  .navbar.active, .navbar.open {
    background-color: rgba(0, 0, 0, 0.5); /* Keeping the same semi-transparent black */
    /* Additional styling for the open state, if necessary */
  }

  /* Styling for individual menu items, if needed */
  .navbar .menu-item {
    color: white; /* or any other color that suits your design */
    /* Other styling properties */
  }
  </style>
  

  
  <div class="profile">
    <div class="profile-header">
      <h1>Rewards Store</h1>
      <p>Use your currency to buy amazing rewards!</p>
      <p>You have <strong><%= currency %></strong> credits available.</p>
    </div>
    <div class="profile-details">
      
     
      <!--=============================================================================-->
      <div id="eventcards">
         <div class="row">

            <div class="col-sm" id="event-card-">
              <div class="card" style = "background-color: rgba(86,187,229, 0.5);">
                <div class="card-body rounded ">
                
                  <form id="rewardForm" action="/buyReward" method="POST">
                    <!-- Hidden input fields -->
                   <input hidden type="text" name="username" value="<%= username %>"/>
                   <input hidden type="text" name="reward" value="extralife"/> <!-- Replace with actual reward type -->
                   <input hidden type="text" name="cost" value="3"/> <!-- Replace with actual reward cost -->
           
                    <!-- Button to trigger form submission -->
                    <svg xmlns="http://www.w3.org/2000/svg"  height="100" fill="red" class="bi bi-heart-fill" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                    </svg>
                    <br>
                   <p>3 Credits</p> 
                   
                   <button id="buyRewardButton" class="btn btn-dark" type="submit">Extra Lives</button>
                   </form>
                
                 
                </div>
              </div>
            </div>
     
      

      <!--=============================================================================-->

           <div class="col-sm" id="event-card-">
            <div class="card" style = "background-color: rgba(86,187,229, 0.5);">
              <div class="card-body rounded ">
              
                <form id="rewardForm" action="/buyReward" method="POST">
                  <!-- Hidden input fields -->
                  <input hidden type="text" name="username" value="<%= username %>"/>
                  <input hidden type="text" name="reward" value="points_2x"/> <!-- Replace with actual reward type -->
                  <input hidden type="text" name="cost" value="5"/> <!-- Replace with actual reward cost -->
                  <img src="img/dubPoints.png" height = "120">
                  <br>
                  <p>5 Credits</p> 
                 
                  <!-- Button to trigger form submission -->
                  <button id="buyRewardButton" class="btn btn-dark" type="submit">Double Points</button>
                </form>
              
               
              </div>
            </div>
          </div>



         </div>
      </div>
     
      
          
      <!--=============================================================================-->
        
    </div>
  </div>
  <%- include ('../partials/message') %>
  <%- include('../partials/footer') %>
</main>




