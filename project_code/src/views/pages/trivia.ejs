<script>
    function getRandomInt(max) {
    return Math.floor(Math.random() * max);
  }


  const answers = ["<%=trivia[0].incorrectAnswers[0]%>", "<%=trivia[0].incorrectAnswers[1]%>", "<%=trivia[0].incorrectAnswers[2]%>", "<%=trivia[0].correctAnswer%>"]
