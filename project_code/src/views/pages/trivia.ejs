  const rando = []  
  function jumbleButtons(){
  
    var completed = 0; 
      while(completed < 4){ 
         var num = getRandomInt(4) 
          if(nums[num] != 100){ 
            rando.push(nums[num]) 
            nums[num] = 100  
            completed++ 
          } 
      } 
