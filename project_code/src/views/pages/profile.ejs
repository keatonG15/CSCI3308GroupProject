<main>

  <%- include ('../partials/navbar') %> 

    <!DOCTYPE html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <title>User Profile</title>
      <style>
        .card {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
        background-color: rgba(33, 138, 159, 0.763);
        border-radius: 25px;
        height: 500px;
        
        }
        
        body{
          background-image: url('img/profileBack.png');
         
        }
        
        .navbar{
          background-color: transparent;
        }
      
      </style>
    </head>
  
    
      <br>
      <div class="container text-center">
        <div class="row align-items-start">
          <div class="col">

            <!-- Beginner-->
            <%if((all_time_score >= 0) && (all_time_score <= 100)){ %>
                <%- include('../partials/xpCards/beginnerXP') %>
            <% } %>    
            <!-- Intermediate-->
            <%if((all_time_score > 100 ) && (all_time_score <= 500)){ %>
              <%- include('../partials/xpCards/intermediateXP') %>
            <% } %>    
            <!-- Advanced-->
          <%if((all_time_score > 500) && (all_time_score <= 1000)){ %>
            <%- include('../partials/xpCards/advancedXP') %>
          <% } %>    
            <!-- Expert-->
        <%if((all_time_score > 1000)){ %>
          <%- include('../partials/xpCards/expertXP') %>
        <% } %>    


        
            

            
          
    
          </div>
          <div class="col">
            <div class="container" style="text-align: center;">
                <!-- THE REST OF YOUR HTML CODE GOES HERE -->
                  <!--Hobby Cards-->
                 
                  <div id="eventcards">
                    <div class="row">
                     
        
                        <!--Event Card:-->
                        <div class="col-sm " id="event-card-">
                          <div class="card " style="width: 500px;">
                            <div class="card-body rounded">
                            
                              <img src="<%=profile_pic%>" style="border-radius: 50%;  height: 150px;">
                              <h1 style = "font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><%= username %>s' profile </h1>
                              <form action="/change_pic" method="GET">
                              <input class="btn btn-dark" type="submit" value="Change Profile Pic"/>
                              </form>
                              <br>
                             
                              <div class="container text-center">
                                <div class="row align-items-start">
                                  <div class="col">
                                     <h4 style = "font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"> High Score: <%= highscore%> </h4>
                                  </div>
                                  <div class="col">
                                    <h5 style = "font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"> Answers right: <br> <%= answers_right%> </h5>
                                  </div>
                                  <div class="col">
                                    <h5 style = "font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"> Answers wrong: <br> <%=answers_wrong%>  </h5>
                                  </div>
                                </div>

                              </div>
                            <br>
                              <div class="col">
                                <h2 style = "font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">All Time Score: <%=all_time_score%></h2>
                             </div>
                             <br>
                            
                             <form action="/home" method="GET">
                              <button  id="A3"   class="btn btn-dark" style="width:150px"type="submit" >Home</button>
                            </form>

                              
                               

                            </div>
                             
                          </div>
                        </div>
                      </div>

                      
                    
                    </div>
                    
                </div>
          </div>
          
          <div class="col">
            <%if((highscore >=0) && (highscore < 50) ){ %>
                <%- include ('../partials/cards/newbie') %>
            <% } %>    
            
            <%if((highscore >= 50) && (highscore < 80)){ %>
                <%- include ('../partials/cards/beginner') %>
            <% } %> 

            <%if((highscore >= 80) && highscore< 130){ %>
                <%- include ('../partials/cards/intermidiate') %>
            <% } %> 

            <%if((highscore >=  130)  && (highscore < 200 )){ %>
                <%- include ('../partials/cards/expert') %>
            <% } %> 

            <%if((highscore >= 200 ) && (highscore < 310) ){ %>
                <%- include ('../partials/cards/einstein') %>
            <% } %> 

            <%if(highscore >= 310 ){ %>
                <%- include ('../partials/cards/god') %>
            <% } %> 



            
          
            






          </div>


        </div>


      </div>
      
        </div>
      
     


    
</main>
